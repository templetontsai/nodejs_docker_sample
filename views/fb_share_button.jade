doctype html
html
  head
    title #{title}
  body
    // Facebook Share Button Code Snippet
    #fb-root
    script.
      (function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) return;
      js = d.createElement(s); js.id = id;
      js.src = "//connect.facebook.net/en_GB/sdk.js#xfbml=1&version=v2.7";
      fjs.parentNode.insertBefore(js, fjs);
      }(document, 'script', 'facebook-jssdk'));
    .fb-share-button(data-href='http://www.autofield.com.au/', data-layout='button_count', data-size='small', data-mobile-iframe='true')
      a.fb-xfbml-parse-ignore(target='_blank', href='https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fdevelopers.facebook.com%2Fdocs%2Fplugins%2F&src=sdkpreparse') Share
    // Tweet Share Button Code Snippet
    a.twitter-share-button(href='https://twitter.com/share', data-show-count='true') Tweet
    script(async='', src='//platform.twitter.com/widgets.js', charset='utf-8')
