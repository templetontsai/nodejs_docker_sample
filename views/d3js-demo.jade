doctype html
html
  head
    title Dashboard Demo
    script(src='https://d3js.org/d3.v4.min.js')
  body
    input#btn(type='button', value='D3js in Action')
    #text
    #circle
    #circle1
    script(type='text/javascript').
      var data = [40, 20, 10]
      d3.select('#text')
      .selectAll('p')
      .data(data)
      .enter()
      .append('p')
      .text(function(d) { return d;})
      d3.select('#circle')
      .append('svg')
      .attr('width', 1000)
      .attr('height', 1000)
      .selectAll('circle')
      .data(data)
      .enter()
      .append('circle')
      .attr('cx', function(d){return 10 * d;})
      .attr('cy', function(d){return 10 * d;})
      .attr('r', function(d){return d;})
      .style('fill', function(d){
      if(d == 40)
      return 'blues';
      else if(d == 20)
      return 'pink';
      else if(d == 10)
      return 'purple';
      });
      circleRadii = [40, 20, 10]
      var svgContainer = d3.select("#circle1").append("svg")
      .attr("width", 600)
      .attr("height", 100);
      var circles = svgContainer.selectAll("circle")
      .data(circleRadii)
      .enter()
      .append("circle")
      var circleAttributes = circles
      .attr("cx", 50)
      .attr("cy", 50)
      .attr("r", function(d) {
      return d;
      })
      .style("fill", function(d) {
      var returnColor;
      if (d === 40) {
      returnColor = "green";
      } else if (d === 20) {
      returnColor = "purple";
      } else if (d === 10) {
      returnColor = "red";
      }
      return returnColor;
      });
